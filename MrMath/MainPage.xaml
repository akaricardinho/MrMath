<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"  
             x:Class="MrMath.MainPage"
             Shell.FlyoutBehavior="Flyout"
             BackgroundColor="#143699">

    <Page.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="#143699"/>
    </Page.Behaviors>
        
    <ScrollView>
        <StackLayout>
            <Label FontSize="32" FontAttributes="Bold" TextColor="White" Margin="0, 30, 10, 0" HorizontalOptions="Center" Text="Faça Login no Mr.Math"/>
            <Image Source="logo.jpeg" HeightRequest="200"/>


            <Button x:Name="debugButton" Margin="0, 30, 0, 30" Text="Debug" Clicked="debugButton_Clicked" FontSize="Medium" FontAttributes="Bold" WidthRequest="125" HeightRequest="50" BackgroundColor="#1E38E6"/>
        </StackLayout>
    </ScrollView>


</ContentPage>
